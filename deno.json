{
    "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
    "nodeModulesDir": "auto",
    "workspace": [
        "./docs",
        "./packages/shared",
        "./packages/skillreader",
        "./packages/analyzer",
        "./packages/cli"
    ],
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "singleQuote": false,
        "proseWrap": "preserve"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "exclude": ["no-inner-declarations"]
        }
    },
    "tasks": {
        "shared:check": "deno task --cwd packages/shared check",
        "shared:test": "deno task --cwd packages/shared test",
        "skillreader:check": "deno task --cwd packages/skillreader check",
        "skillreader:test": "deno task --cwd packages/skillreader test",
        "analyzer:check": "deno task --cwd packages/analyzer check",
        "analyzer:test": "deno task --cwd packages/analyzer test",
        "cli:dev": "deno task --cwd packages/cli dev",
        "cli:build": "deno task --cwd packages/cli build",
        "cli:test": "deno task --cwd packages/cli test",
        "cli:check": "deno task --cwd packages/cli check",
        "cli:install": "deno task --cwd packages/cli install",
        "check": "deno task skillreader:check && deno task analyzer:check && deno task cli:check",
        "test": "deno task skillreader:test && deno task analyzer:test && deno task cli:test",
        "fmt": "deno fmt",
        "fmt:check": "deno fmt --check",
        "lint": "deno lint",
        "build": "deno task cli:build",
        "dev": "deno task cli:dev",
        "docs:dev": "deno task --cwd docs dev",
        "docs:build": "deno task --cwd docs build",
        "docs:preview": "deno task --cwd docs preview",
        "npm:build": "deno run -A scripts/build_npm.ts",
        "precommit": "deno fmt && deno task check && deno task test"
    },
    "imports": {
        "@FeiyouG/skill-lab-skill-reader": "./packages/skillreader/mod.ts",
        "@FeiyouG/skill-lab-shared": "./packages/analyzer/mod.ts",
        "@FeiyouG/skill-lab-analyzer": "./packages/analyzer/mod.ts",
        "@std/assert": "jsr:@std/assert@^1.0.0",
        "@std/testing": "jsr:@std/testing@^1.0.0"
    }
}
